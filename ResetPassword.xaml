<Window x:Class="LibraryManageSystem.ResetPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManageSystem"
        mc:Ignorable="d"
        Title="ResetPassword" Height="450" Width="400">
    <Grid>
        <PasswordBox x:Name="pb1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="230" Margin="81,119,0,0" Height="40"/>
        <PasswordBox x:Name="pb2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="230" Margin="81,256,0,0" Height="40"/>
        <Button x:Name="cancel" Content="取消" HorizontalAlignment="Left" Margin="56,363,0,0" VerticalAlignment="Top" Width="65" Height="30" Click="cancel_Click"/>
        <Button x:Name="enter" Content="确定" HorizontalAlignment="Left" Margin="281,363,0,0" VerticalAlignment="Top" Width="65" Height="30" Click="enter_Click"/>
        <Label FontSize="20" IsEnabled="False" Content="请输入新密码：" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="29,59,0,0" Width="147" Height="37"/>
        <Label FontSize="20" IsEnabled="False" Content="请再次输入：" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="29,214,0,0" Width="147" Height="37"/>

    </Grid>
</Window>
