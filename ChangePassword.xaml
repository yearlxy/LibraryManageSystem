<Window x:Class="LibraryManageSystem.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManageSystem"
        mc:Ignorable="d"
        Title="ChangePassword" Height="200" Width="400">
    <Grid>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="66,88,0,0" VerticalAlignment="Top" Width="266" Height="29"/>
        <Label FontSize="16" FontWeight="Black" FontStyle="Italic" FontFamily="宋体" IsEnabled="False" Content="请输入当前密码：" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,44,0,0" Width="141" Height="39"/>
        <Button x:Name="cancel" Content="取消" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="42,134,0,0" Height="28" Click="cancel_Click"/>
        <Button x:Name="enter" Content="确定" HorizontalAlignment="Left" Margin="293,134,0,0" VerticalAlignment="Top" Width="75" Height="28" Click="enter_Click"/>
    </Grid>
</Window>
